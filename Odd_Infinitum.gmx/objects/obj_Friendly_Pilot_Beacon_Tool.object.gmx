            <string>/// Take Input

// Pause Controls
var key_up = keyboard_check_pressed(vk_up) 
            || gamepad_button_check_pressed(0, gp_padu)
            || gamepad_axis_value(0, gp_axislv) &gt; 0;
            
var key_down = keyboard_check_pressed(vk_down) 
            || gamepad_button_check_pressed(0, gp_padd)
            || gamepad_axis_value(0, gp_axislv) &lt; 0;
            
var key_select = keyboard_check_pressed(vk_return)
            || gamepad_button_check_pressed(0, gp_face1);
  
var key_menu = keyboard_check_pressed(ord("2"));
                      
// Change Option with Keyboard Input          
if (key_up &amp;&amp; show_summon_menu)
{
    if (selection == "Summon")
        selection = "Cancel";
    else if (selection == "Wait")
        selection = "Summon";
    else if (selection == "Cancel")
        selection = "Wait";
}
if (key_down &amp;&amp; show_summon_menu)
{
    if (selection == "Summon")
        selection = "Wait";
    else if (selection == "Wait")
        selection = "Cancel";
    else if (selection == "Cancel")
        selection = "Summon";
}

if (key_select &amp;&amp; show_summon_menu)
{
    if (selection == "Summon")
    {
        //obj_Player_Overworld.overworld_state = overworld_states.summoning;   
        scr_player_summoning(); 
        show_summon_menu = false;
    }
    else if (selection == "Wait")
    {
        //obj_Player_Overworld.overworld_state = overworld_states.waiting;
        scr_player_waiting();
        show_summon_menu = false;
    }
    else if (selection == "Cancel")
        show_summon_menu = false;
}

if (key_menu)
{
    // Enable Menu
    if (!show_summon_menu)
        show_summon_menu = true;
    else
        show_summon_menu = false;
}
    
</string>
