          <argument>
            <kind>1</kind>
            <string>/// Combat

//When health is zero, boss is defeated
if (boss_health &lt; 0) {boss_health = 0;}
if (boss_health == 0) {defeated = true;}

// While Not Defeated (i.e. In Combat)
if (!defeated)
{
    if (combat)
    {
        // Randomly Generate 3 Red Lasers
        if (attack_lock == false)
        {
            // Upper Laser
            //effect_create_above(ef_spark, x+16, y-32, 2, c_red);
            var attack_U = instance_create(x+16,y-32,obj_Red_Laser);
            attack_U.direction = 180;
            attack_U.speed = 8;
    
            // Center Laser
            //effect_create_above(ef_spark, x, y, 2, c_red);
            var attack_C = instance_create(x,y,obj_Red_Laser);
            attack_C.direction = 180;
            attack_C.speed = 8;
    
            // Lower Laser
            //effect_create_above(ef_spark, x+16, y+32, 2, c_red);
            var attack_D = instance_create(x+16,y+32,obj_Red_Laser);
            attack_D.direction = 180;
            attack_D.speed = 8;
    
            // Lock Attack Window
            attack_lock = true;
            // Set Timer for When to Attack Again
            alarm[0] = random_range(30,120);
        }
    
        // Generate Small Seeker Orbs
        if (Chance(0.5,50))
            for (i = 1; i &lt; 3; i++)
                instance_create(x,y,obj_Red_Seeker);
    }
}
else
{
    // Stop Moving
    path_end();
    
    // Generate Random Explosions
    generate_explosions(99);
    
    // Set Explosion Timer
    if (!explosion_imminent)
    {
        alarm[2] = 180;
        explosion_imminent = true;
    }
}
